@page
@model SistemaIntegralCYA.App.Frontend.Pages.router.UpdateBD
@{
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mantenimiento y Reparaciones de Computadores</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/normalize.css" />
    <link rel="stylesheet" href="~/css/estilos.css" />
    <meta property="og:type" content="website">
    <meta property="og:url" content="http//:Castro-Asociados-GrupoG.github.io/">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>    
</head>

<div>
    <h1>Modificar Información Usuario @Model.clientes.Id</h1>
</div>

<body class="signForm">    
    <div class="signupFrm">
        <form method="post">
            <input type="hidden" asp-for="clientes.Id"/>
            <div class="formForm" id="formRegistro">    

                <h3 class="titleForm">Modificar Datos</h3>

                <div class="inputContainer">                    
                    <input id="nombres" type="text" class="inputForm" asp-for="clientes.Nombre" placeholder="a">
                    <label class="labelForm" asp-for="clientes.Nombre">Nombre</label>                    
                </div>

                <div class="inputContainer">                    
                    <input id="apellidos" type="text" class="inputForm" asp-for="clientes.Apellido" placeholder="a">
                    <label class="labelForm" asp-for="clientes.Apellido">Apellido</label>                    
                </div>

                <div class="inputContainer">                    
                    <input id="NumeroTelefono" type="text" class="inputForm" asp-for="clientes.NumeroTelefono" placeholder="a">
                    <label class="labelForm" asp-for="clientes.NumeroTelefono">Numero Telefono</label>                    
                </div>

                <div class="inputContainer">                    
                    <input id="CorreoElectronico" type="email" class="inputForm" asp-for="clientes.CorreoElectronico" placeholder="a">
                    <label class="labelForm" asp-for="clientes.CorreoElectronico">Correo Electrónico</label>                    
                </div>

                <div class="inputContainer">                    
                    <input id="Contrasena" type="text" class="inputForm" asp-for="clientes.ClaveUsuario" placeholder="a">
                    <label class="labelForm" asp-for="clientes.ClaveUsuario">Contrasena</label>                    
                </div>  

                <div class="inputContainer">                    
                    <input id="ConfirmarContrasena" type="text" class="inputForm" asp-for="clientes.ClaveUsuario" placeholder="a">
                    <label class="labelForm" asp-for="clientes.ClaveUsuario">Confirmar Contraseña</label>                    
                </div>  

                <div>
                    <button type="submit" class="btn btn-primary">Modificar</button>
                </div>
                <div>
                    <a asp-page="./BDClientes" class="btn btn-primary">Base de Datos</a>
                </div> 
            </div>
            <div id="mensaje"></div>                 
        </form> 
    </div>

    <script src="../js/validacionRegistro.js"></script>

</body>

