@page
@model SistemaIntegralCYA.App.Frontend.Pages.router.BDClientes
@{
}

<h1>Usuarios Sistema</h1>

<table class="table">
    <tr>
        <th scope="col">Identificación</th>
        <th scope="col">Nombres</th>
        <th scope="col">Apellidos</th>
    </tr>

    @foreach(var cliente in Model.clientes)
    {          
        <tr> 
            <td>@cliente.Id</td>           
            <td>@cliente.Nombre</td>
            <td>@cliente.Apellido</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="../router/DetallesBD" asp-route-clienteId="@cliente.Id">
                    <i class="fas fa-info-circle fa-lg"></i> 
                    Detalle Cliente
                </a>    
            </td>  
            <td>
                <a class="btn btn-primary table-btn" asp-page="../router/UpdateBD" asp-route-clienteId="@cliente.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                    Modificar
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="../router/DeleteBD" asp-route-clienteId="@cliente.Id">
                    <i class="fas fa-trash fa-lg" aria-hidden="true"></i>
                    Eliminar
                </a>
            </td>            
        </tr>     
    }
</table>
<div>
    <a asp-page="../router/AdminSistema" class="btn btn-primary">Menú Principal</a>
</div>


