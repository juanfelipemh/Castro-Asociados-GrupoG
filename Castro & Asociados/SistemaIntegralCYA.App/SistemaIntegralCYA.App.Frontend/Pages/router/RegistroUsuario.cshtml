@model SistemaIntegralCYA.App.Pages.RegistroUsuarioModel
@{
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/normalize.css" />
    <link rel="stylesheet" href="~/css/estilos.css" />

</head>

<body class="signForm">    
    <div class="signupFrm">
        <form class="formForm" id="formRegistro">
        <h1 class="titleForm">Registrarse</h1>  

        <div class="inputContainer">
            <input id="identificacion" type="number" class="inputForm" placeholder="a">
            <label class="labelForm">Identificacion</label>
        </div>
        
        <div class="inputContainer">
            <input id="nombres" type="text" class="inputForm" placeholder="a">
            <label class="labelForm">Nombres</label>
        </div>

        <div class="inputContainer">
            <input id="apellidos" type="text" class="inputForm" placeholder="a">
            <label class="labelForm">Apellidos</label>
        </div>

        <div class="inputContainer">
            <input id="CorreoElectronico" type="email" class="inputForm" placeholder="a">
            <label class="labelForm">Correo Electrónico</label>
        </div>
        <div class="inputContainer">
            <input id="Contrasena" type="password" class="inputForm" placeholder="a">
            <label class="labelForm">Contrasena</label>
        </div>

        <div class="inputContainer">
            <input id="ConfirmarContrasena" type="password" class="inputForm" placeholder="a">
            <label class="labelForm">Confirmar Contraseña</label>
        </div>
        
        <input type="submit" class="submitBtn" value="Registrarse">
        <div id="mensaje"></div>
        </form>
    </div>    
</body>

